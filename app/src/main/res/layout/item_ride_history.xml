<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">

    <!-- Contact Information -->
    <LinearLayout
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:background="@drawable/box_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start">

        <TextView
            android:id="@+id/commuterNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Name: Lyn Robostro"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: In Progress"
            android:textSize="16sp"
            android:textColor="@color/black" />



        <TextView
            android:id="@+id/rideInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nov 11 (Mon) 03:27 PM JR#12411119558049395"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/startLocationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Montville"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/endLocationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Landoor"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/totalFareTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â‚±100"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>