<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DriverRegister" >

    <!-- User Registration Header -->
    <TextView
        android:id="@+id/userDisplayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="20dp"
        android:gravity="center"
        android:text="Commuter Registration"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <!-- ScrollView Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:nestedScrollingEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userDisplayName"
        app:layout_constraintVertical_bias="0.0">

        <!-- LinearLayout Inside ScrollView -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <!-- First Name Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:boxBackgroundMode="none"
                app:endIconMode="clear_text"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_blue"
                    android:drawableStart="@drawable/user"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:hint="First Name"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Last Name Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:boxBackgroundMode="none"
                app:endIconMode="clear_text"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_blue"
                    android:drawableStart="@drawable/user"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:hint="Last Name"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:boxBackgroundMode="none"
                app:endIconMode="clear_text"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_blue"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:hint="Email"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <!-- Phone Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:boxBackgroundMode="none"
                app:endIconMode="clear_text"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_blue"
                    android:drawableStart="@drawable/phone"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:hint="Phone"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:boxBackgroundMode="none"
                app:endIconMode="clear_text"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_blue"
                    android:drawableStart="@drawable/phone"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:hint="Address"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:boxBackgroundMode="none"
                app:endIconMode="password_toggle"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_blue"
                    android:drawableStart="@drawable/padlock"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="12sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirm Password Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:boxBackgroundMode="none"
                app:endIconMode="password_toggle"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_blue"
                    android:drawableStart="@drawable/padlock"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textSize="12sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:padding="16dp">


                <!-- Title -->
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="Additional Information"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Attach the required photos below for verification."
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvTricycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@id/subtitle"
                    android:text="Tricycle Photo"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <!-- Tricycle Input -->
                <LinearLayout
                    android:id="@+id/tricycle_section"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/subtitle"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/box_background"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/tricycle_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Add Tricycle"
                        android:src="@drawable/ic_add" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tvPlateNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@id/tricycle_section"
                    android:text="Plate Number"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
                <!-- Plate Number Input -->
                <LinearLayout
                    android:id="@+id/plate_number_section"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/tricycle_section"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/box_background"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/plate_number_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Add Plate Number"
                        android:src="@drawable/ic_add" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDriverPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@id/plate_number_section"
                    android:text="Driver Photo"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <!-- Driver Input -->
                <LinearLayout
                    android:id="@+id/driver_section"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/plate_number_section"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/box_background"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/driver_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:contentDescription="Driver Photo"
                        android:src="@drawable/ic_add" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tvDriverLicense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@id/driver_section"
                    android:text="Driver's License"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
                <!-- Driver's License Input -->
                <LinearLayout
                    android:id="@+id/drivers_license_section"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/driver_section"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/box_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/drivers_license_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Add Driver's License"
                        android:src="@drawable/ic_add" />
                </LinearLayout>
            </RelativeLayout>


            <!-- Terms & Conditions and Checkbox -->
            <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Checkbox -->
                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:text="I agree to the "
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@id/terms"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Terms & Conditions Link -->
                <TextView
                    android:id="@+id/terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-8dp"
                    android:layout_marginTop="16dp"
                    android:paddingStart="8dp"
                    android:text="Terms &amp; Conditions"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/checkBox"
                    app:layout_constraintTop_toTopOf="@id/checkBox" />

                <!-- Submit Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rounded_button"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/checkBox" />

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnSubmit" />

                <!-- Register Text -->
                <TextView
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="50dp"
                    android:gravity="center"
                    android:text="Already have an account?"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progressBar" />

                <!-- Log In Link -->
                <TextView
                    android:id="@+id/registerAs"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="16dp"
                    android:paddingStart="8dp"
                    android:text="Log In"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/register"
                    app:layout_constraintTop_toTopOf="@id/register" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>